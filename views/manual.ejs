            function updateStatusColor(element, status) {
                // first, clear all status classes
                element.classList.remove('status-forward', 'status-backward', 'status-stopped');

                // now, apply the appropriate class based on the status
                if (status === 'Forward' || status === 'Retracting' || status === 'ON' || status === 'Reading' || status === 'Up') {
                    element.classList.add('status-forward');
                } else if (status === 'Backward' || status === 'Extending' || status === 'Down') {
                    element.classList.add('status-backward');
                } else if (status === 'Stopped' || status === 'OFF') {
                    element.classList.add('status-stopped');
                }
