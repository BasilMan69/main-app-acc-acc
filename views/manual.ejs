    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const LED1Status = document.getElementById('LED1Status');
            const LED2Status = document.getElementById('LED2Status');
            const togglePumpButton = document.getElementById('togglePumpButton');
            const pumpStatus = document.getElementById('pumpStatus');
            let pumpOn = false;
            const forwardButton = document.getElementById('forwardButton');
            const backwardButton = document.getElementById('backwardButton');
            const stopButton = document.getElementById('stopButton');
            const leftMotorStatus = document.getElementById('leftMotorStatus');
            const rightMotorStatus = document.getElementById('rightMotorStatus');
            const leftServoStatus = document.getElementById('leftServoStatus');
            const rightServoStatus = document.getElementById('rightServoStatus');
            const readSoilStatus = document.getElementById('readSoilStatus');
            let motorState = 'Stopped';
            const cylinderUpButton = document.getElementById('cylinderUpButton');
            const cylinderDownButton = document.getElementById('cylinderDownButton');
            const cylinderStopButton = document.getElementById('cylinderStopButton');
            const cylinderStatus = document.getElementById('cylinderStatus');
            let cylinderExtended = false;
            let readSoilState = false;

            // const socket = new WebSocket("ws://localhost:4000/ws");
            const socket = new WebSocket("ws://automaticcropcaretaker.com/ws");

            socket.addEventListener("open", () => {
                console.log("WebSocket connection opened");
                const data = {
                    type: "connection",
                    data: "website/manual",
                };
                socket.send(JSON.stringify(data));
            });

            socket.addEventListener("message", (event) => {
                console.log("Message received from server:", event.data);
            });

            togglePumpButton.addEventListener('click', () => {
                if (pumpOn) {
                    // Turn off the pump
                    turnOffPump();
                } else {
                    // Turn on the pump
                    turnOnPump();
                }

                // Toggle the pump status
                pumpOn = !pumpOn;
                pumpStatus.innerHTML = pumpOn ? 'ON' : 'OFF';
            });
            forwardButton.addEventListener('click', () => {
                // Drive base forward
                driveForward();
                // Update motor status
                leftMotorStatus.textContent = 'Forward';
                rightMotorStatus.textContent = 'Forward';
                // motorState = 'Running Forward';
                updateStatusColor(leftMotorStatus, 'Forward');
                updateStatusColor(rightMotorStatus, 'Forward');
            });
            backwardButton.addEventListener('click', () => {
                // Drive base backward
                driveBackward();
                // Update motor status
                leftMotorStatus.textContent = 'Backward';
                rightMotorStatus.textContent = 'Backward';
                updateStatusColor(leftMotorStatus, 'Backward');
                updateStatusColor(rightMotorStatus, 'Backward');
                // motorState = 'Running Backward';
            });
            stopButton.addEventListener('click', () => {
                // Stop the drive base
                stopDrive();
                // Update motor status
                leftMotorStatus.textContent = 'Stopped';
                rightMotorStatus.textContent = 'Stopped';
                updateStatusColor(leftMotorStatus, 'Stopped');
                updateStatusColor(rightMotorStatus, 'Stopped');
                motorState = 'Stopped';
            });

            // cylinderUpButton.addEventListener('click', () => {
            //     if (cylinderExtended) {
            //         // Retract the cylinder
            //         retractCylinder();
            //     } else {
            //         // Extend the cylinder and wait for 20 seconds
            //         extendCylinder();
            //         setTimeout(() => {
            //             // After 20 seconds, retract the cylinder
            //             retractCylinder();
            //             cylinderStatus.textContent = 'Retracted';
            //             cylinderExtended = false;
            //         }, 20000); // 20 seconds in milliseconds
            //     }

            //     // Toggle the cylinder status
            //     cylinderExtended = !cylinderExtended;
            //     cylinderStatus.textContent = cylinderExtended ? 'Extended' : 'Retracted';
            // });

            cylinderUpButton.addEventListener('click', () => {
                // Drive base forward
                retractCylinder();
                // Update motor status
                cylinderStatus.textContent = 'Retracting';
                updateStatusColor(cylinderStatus, 'Retracting');
            });

            cylinderDownButton.addEventListener('click', () => {
                // Drive base forward
                extendCylinder();
                // Update motor status
                cylinderStatus.textContent = 'Extending';
                updateStatusColor(cylinderStatus, 'Extending');
            });

            cylinderStopButton.addEventListener('click', () => {
                // Drive base forward
                stopCylinder();
                // Update motor status
                cylinderStatus.textContent = 'Stopped';
                updateStatusColor(cylinderStatus, 'Stopped');
            });

            //both_servos func
            function bothServosUp() {
                const data = {
                    type: "control/both_servos",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                leftServoStatus.textContent = 'Up';
                rightServoStatus.textContent = 'Up';
                updateStatusColor(leftServoStatus, 'Up');
                updateStatusColor(rightServoStatus, 'Up');
            }

            function bothServosDown() {
                const data = {
                    type: "control/both_servos",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                leftServoStatus.textContent = 'Down';
                rightServoStatus.textContent = 'Down';
                updateStatusColor(leftServoStatus, 'Stopped');
                updateStatusColor(rightServoStatus, 'Stopped');
            }

            //left_servo func
            function leftServoUp() {
                const data = {
                    type: "control/left_servo",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                leftServoStatus.textContent = 'Up';
                updateStatusColor(leftServoStatus, 'Up');

            }

            function leftServoDown() {
                const data = {
                    type: "control/left_servo",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                leftServoStatus.textContent = 'Down';
                updateStatusColor(leftServoStatus, 'Stopped');

            }

            //right_servo func
            function rightServoUp() {
                const data = {
                    type: "control/right_servo",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                rightServoStatus.textContent = 'Up';
                updateStatusColor(rightServoStatus, 'Up');

            }

            function rightServoDown() {
                const data = {
                    type: "control/right_servo",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                rightServoStatus.textContent = 'Down';
                updateStatusColor(rightServoStatus, 'Stopped');

            }

            //cylinder func
            function extendCylinder() {
                const data = {
                    type: "control/cylinder",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Cylinder is Extended');
            }

            function retractCylinder() {
                const data = {
                    type: "control/cylinder",
                    direction: -1,
                };
                socket.send(JSON.stringify(data));
                console.log('Cylinder is Retracted');
            }

            function stopCylinder() {
                const data = {
                    type: "control/cylinder",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Cylinder is Stopped');
            }

            //both_motors func
            function driveForward() {
                const data = {
                    type: "control/both_motors",
                    direction: 1,
                    speed1: 26,
                    speed2: 20,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
            }

            function driveBackward() {
                const data = {
                    type: "control/both_motors",
                    direction: -1,
                    speed1: 26,
                    speed2: 20,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
            }

            function stopDrive() {
                const data = {
                    type: "control/both_motors",
                    direction: 0,
                    speed1: 0,
                    speed2: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is stopped');
            }

            //left_motor func
            function leftMotorForward() {
                const data = {
                    type: "control/left_motor",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
                leftMotorStatus.textContent = 'Forward';
                updateStatusColor(leftMotorStatus, 'Forward');

            }

            function leftMotorBackward() {
                const data = {
                    type: "control/left_motor",
                    direction: -1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
                leftMotorStatus.textContent = 'Backward';
                updateStatusColor(leftMotorStatus, 'Backward');

            }

            function leftMotorStop() {
                const data = {
                    type: "control/left_motor",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is stopped');
                leftMotorStatus.textContent = 'Stopped';
                updateStatusColor(leftMotorStatus, 'Stopped');
            }

            //right_motor func
            function rightMotorForward() {
                const data = {
                    type: "control/right_motor",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving forward');
                rightMotorStatus.textContent = 'Forward';
                updateStatusColor(rightMotorStatus, 'Forward');

            }

            function rightMotorBackward() {
                const data = {
                    type: "control/right_motor",
                    direction: -1,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is moving backward');
                rightMotorStatus.textContent = 'Backward';
                updateStatusColor(rightMotorStatus, 'Backward');

            }

            function rightMotorStop() {
                const data = {
                    type: "control/right_motor",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Drive base is stopped');
                rightMotorStatus.textContent = 'Stopped';
                updateStatusColor(rightMotorStatus, 'Stopped');

            }

            //pump func
            function turnOnPump() {
                const data = {
                    type: "control/pump",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('Pump is ON');
                updateStatusColor(pumpStatus, 'ON');
            }

            function turnOffPump() {
                const data = {
                    type: "control/pump",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('Pump is OFF');
                updateStatusColor(pumpStatus, 'OFF');
            }

            //led1, led2 func
            function turnOnLED1() {
                const data = {
                    type: "control/led1",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is ON');
                LED1Status.textContent = 'ON';
                updateStatusColor(LED1Status, 'ON');
            }

            function turnOffLED1() {
                const data = {
                    type: "control/led1",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is OFF');
                LED1Status.textContent = 'OFF';
                updateStatusColor(LED1Status, 'OFF');
            }

            function turnOnLED2() {
                const data = {
                    type: "control/led2",
                    direction: 1,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is ON');
                LED2Status.textContent = 'ON';
                updateStatusColor(LED2Status, 'ON');
            }

            function turnOffLED2() {
                const data = {
                    type: "control/led2",
                    direction: 0,
                };
                socket.send(JSON.stringify(data));
                console.log('LED is OFF');
                LED2Status.textContent = 'OFF';
                updateStatusColor(LED2Status, 'OFF');
            }

            //both_leds
            // function turnOnBothLEDs() {
            //     const data = {
            //         type: "control/both_leds",
            //         direction: 1,
